{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "target": "es2018",
    "module": "commonjs",
    "declaration": true,

    "pretty": true,
    
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
